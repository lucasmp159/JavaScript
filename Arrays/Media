function media (a, b, c){
    var array = []
    array.push(a)
    array.push(b)
    array.push(c)
    console.log(array)
    s = array.length
    let med = ((array[0] + array[1] + array[2] )/ s)
    console.log(med.toPrecision(2))
}

media(5,7,8)
